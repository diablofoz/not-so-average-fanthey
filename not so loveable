  } else {
    rberserker.velocityX = -0.85;
    rberserker.setAnimation("rBerserkerWalk");
  }
  if (rberserkerhealth < 1) {
    rberserker.x = 296;
    rberserker.y = 324;
    rberserker.scale = 0.2;
    rberserker.visible = true;
    rberserkerhealth = 0;
    }
}


      } else if (rfootman3look == 4) {
        rfootman3.setAnimation("rFootmanOrangeIdle");
      } else if (rfootman3look == 5) {
        rfootman3.setAnimation("rFootmanPurpleIdle");
      } else if (rfootman3look == 6) {
        rfootman3.setAnimation("rFootmanBlackIdle");

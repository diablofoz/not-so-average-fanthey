  if (keyDown("a") && (coinsblue > 30) && (archerhealth < 1)){
      archerhealth = 4;
      coinsblue = coinsblue - 30;
      archer.visible = true;
      archer.scale = 0.375;
      if (bluelane == 1) {
      archer.y = 135;
      archer.x = 45;
      }
      if (bluelane == 2) {
      archer.y = 190;
      archer.x = 28;
      }
      if (bluelane == 3) {
